<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/khaki"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="40dp"
        android:text="Say &quot;Hello&quot; to Start"/>

    <Button
        android:id="@+id/startServiceBtn"
        style="@style/ButtonOnMain"
        android:background="@drawable/btn_green"
        android:onClick="onStartService"
        android:text="Force to Start" />

    <Button
        android:id="@+id/stopServiceBtn"
        style="@style/ButtonOnMain"
        android:background="@drawable/btn_red"
        android:onClick="onStopService"
        android:text="Force to Stop" />
    
    
        <Button
        android:id="@+id/testServiceBtn"
        style="@style/ButtonOnMain"
        android:background="@drawable/btn_black"
        android:onClick="onTestService"
        android:text="Test Service" />

</LinearLayout>